---
name: logstash-cf
templates:
   bin/cf_ctl: bin/cf_ctl
   bin/monit_debugger: bin/monit_debugger
   data/properties.sh.erb: data/properties.sh
   helpers/ctl_setup.sh: helpers/ctl_setup.sh
   helpers/ctl_utils.sh: helpers/ctl_utils.sh
   config/logstash.conf.erb: config/logstash.conf



packages:
- java7
- logstash

properties:
  redis.port:
    description: Port to listen for requests to redis server
    default: 6379
  redis.host:
    description: Host where redis is installed
    default: localhost
  logstash.redis.key:
    description: Key in redis
    default: logstash
  logstash.idle_flush_time:
    description: The amount of time since last flush before a flush is forced.
    default: 5
  logstash.filter.workers:
    description: The number of workers to use for filters
    default: 1
  logstash.workers:
    description: The number of workers to use for this output.
    default: 3
  logstash.index:
    description: Index prefix where to store messages in ES.
    default: cloudfoundry
  elasticsearch.cluster:
    description: Clustername
  elasticsearch.host:
    description: Host where elasticsearch is installed
    default: 127.0.0.1
